# VisuTry 测试环境配置

# 基础配置
NODE_ENV=test
ENABLE_MOCKS=true
TEST_MODE=true

# 服务器配置
TEST_SERVER_URL=http://localhost:3000
TEST_SERVER_PORT=3000

# 数据库配置 (测试模式下使用Mock)
DATABASE_URL=mock://localhost/test

# 认证配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=test-secret-key-for-testing-only

# 外部服务配置 (测试模式下使用Mock)
BLOB_READ_WRITE_TOKEN=mock-blob-token
GOOGLE_GEMINI_API_KEY=mock-gemini-key
STRIPE_SECRET_KEY=mock-stripe-key
STRIPE_WEBHOOK_SECRET=mock-webhook-secret

# Auth0 OAuth (测试模式下使用Mock)
AUTH0_ID=mock-auth0-client-id
AUTH0_SECRET=mock-auth0-client-secret
AUTH0_ISSUER_BASE_URL=https://mock.auth0.com

# 测试配置
TEST_TIMEOUT=30000
TEST_RETRY_COUNT=3
TEST_PARALLEL_WORKERS=1

# Mock服务配置
MOCK_AI_PROCESSING_TIME=3000
MOCK_FILE_UPLOAD_DELAY=500
MOCK_PAYMENT_PROCESSING_TIME=2000

# 测试用户配置
TEST_USER_EMAIL=test@example.com
TEST_PREMIUM_USER_EMAIL=premium@example.com
TEST_USER_PASSWORD=test-password

# 日志配置
LOG_LEVEL=info
TEST_LOG_ENABLED=true

# 覆盖率配置
COVERAGE_THRESHOLD=80
COVERAGE_REPORTS=true
